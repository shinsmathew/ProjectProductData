@{
}

@model ProjectProductData.Models.AddProduct


@if (TempData["EMsg"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["EMsg"]
    </div>
}
@if (TempData["SMsg"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SMsg"]
    </div>
}




<form method="post">

    <div class="container">
        <div class="box">
            <h1> Add Product </h1>

            <div class="mt-3" hidden>

                <input type="text" value="ID" class="form-control" asp-for="ProductID" />

            </div>

            <div class="mt-3">
                <label class="form-label">Product Name</label>
                <input type="text" class="form-control" asp-for="ProductName" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label class="form-label">Product Size</label>
                <input type="text" class="form-control" asp-for="ProductSize" />
                <span asp-validation-for="ProductSize" class="text-danger"></span>

            </div>

            <div class="mt-3">
                <label class="form-label">Product Price</label>
                <input type="text" class="form-control" asp-for="ProductPrize" />
                <span asp-validation-for="ProductPrize" class="text-danger"></span>

            </div>

   



            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <span asp-validation-summary="All" class="text-danger"></span>
                <button type="reset" class="btn btn-danger">Cancel</button>
                <a class="btn btn-primary" style="background-color:chartreuse" asp-controller="Product" asp-action="ProductList">View</a>


            </div>
        </div>
    </div>
</form>

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh; /* Full viewport height */
        
    }

    .box {
        border: 2px solid #ccc;
        padding: 20px;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 400px;
    }
</style>